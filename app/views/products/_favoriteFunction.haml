- if current_user.favorited_by?(product.id)
  %button.default-btn.product-dislike-btn.red-effect
    %i.fas.fa-heart
    %td= link_to 'いいね', destroy_favorite_path(product), method: :DELETE, remote: true, class: "btn-link red-effect"
    = product.favorites.count

- else
  %button.default-btn.product-like-btn
    %i.far.fa-heart
    %td= link_to 'いいね', create_favorite_path(product), method: :POST, remote: true, class: "btn-link"
    = product.favorites.count



